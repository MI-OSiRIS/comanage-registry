<!--
  While this schema mostly works with database prefixes, foreign key constraints
  must be specified in raw SQL, which needs the prefixed table name.

-->
<schema version="0.3">
  <table name="co_ceph_provisioner_targets">
    <field name="id" type="I">
      <key />
      <autoincrement />
    </field>
     <field name="co_provisioning_target_id" type="I">
      <constraint>REFERENCES cm_co_provisioning_targets(id)</constraint>
    </field>

     <field name="co_ldap_provisioner_target_id" type="I">
      <constraint>REFERENCES cm_co_ldap_provisioner_targets(id)</constraint>
    </field>

    <field name="co_grouper_provisioner_target_id" type ="I">
      <constraint>REFERENCES cm_co_grouper_provisioner_targets(id)</constraint>
    </field>
    
    <field name="rgw_url" type="C" size="256" />
    <field name="opt_rgw_admin_api" type="L" />
    <field name="opt_ceph_admin_api" type="L" />
    <field name="opt_posix_lookup_ldap" type="L" />
    <field name="ceph_admin_api_url" type="C" size="256" />
    <field name="rgw_admin_api_url" type="C" size="256" />
    <field name="ceph_client_name" type="C" size="64" />
    <field name="ceph_cluster" type="C" size="64" />
    <field name="ceph_config_file" type="C" size="128" />
    <field name="rgw_access_key" type="C" size="256" />
    <field name="rgw_secret_key" type="C" size="256" />
    <field name="opt_create_cou_data_pools" type="L" />
    <field name="cou_data_pool_pgcount" type="I" />
    <field name="opt_rgw_ldap_auth" type="L" />
    <field name="ceph_user_prefix" type="C" size="64" />
    <field name="opt_create_cou_data_dir" type="L" />
    <field name="cou_data_dir_command" type="C" size="256" />
    <field name="ceph_fs_mountpoint" type="C" size="256" />
    <field name="ceph_fs_name" type="C" size="128" />
    <field name="opt_mds_cap_uid" type="L" />
    <field name="created" type="T" />
    <field name="modified" type="T" />
    
    <index name="co_ceph_provisioner_targets_i1">
      <col>co_provisioning_target_id</col>
      <unique />
    </index>
  </table>

  <table name="co_ceph_provisioner_data_pools">
    <field name="id" type="I">
      <key />
      <autoincrement />
    </field>
    <field name="co_ceph_provisioner_target_id" type="I">
      <constraint>REFERENCES cm_co_ceph_provisioner_targets(id)</constraint>
    </field>
    <field name="cou_id" type="I">
      <constraint>REFERENCES cm_cous(id)</constraint>
    </field>
    <field name="cou_data_pool_type" type="I"/>
    <field name="cou_data_pool" type="C" size="256" />
    <field name="created" type="T" />
    <field name="modified" type="T" />
    
    <index name="co_ceph_provisioner_data_pools_i1">
      <col>co_ceph_provisioner_target_id</col>
      <col>cou_data_pool</col>
      <unique />
    </index>
  </table>

 <table name="co_ceph_provisioner_creds">
    <field name="id" type="I">
      <key />
      <autoincrement />
    </field>
    <field name="co_ceph_provisioner_target_id" type="I">
      <constraint>REFERENCES cm_co_ceph_provisioner_targets(id)</constraint>
    </field>
    <field name="co_person_id" type="I">
      <constraint>REFERENCES cm_co_people(co_person_id)</constraint>
      <notnull />
    </field>
    <field name="identifier" type="C" size="64" />
    <field name="userid" type="C" size="64" />
    <field name="secret" type="C" size="256" />
    <field name="type" type="C" size="2" />
    <field name="primaryid" type="L" />
    <field name="created" type="T" />
    <field name="modified" type="T" />
     <index name="co_ceph_provisioner_creds_i2">
      <col>co_ceph_provisioner_target_id</col>
      <col>type</col>
      <col>userid</col>
      <unique />
    </index>
  </table>

  <table name="co_ceph_provisioner_data_placements">
    <field name="id" type="I">
      <key />
      <autoincrement />
    </field>
    <field name="co_ceph_provisioner_target_id" type="I">
      <constraint>REFERENCES cm_co_ceph_provisioner_targets(id)</constraint>
      <notnull />
    </field>
    <field name="identifier" type="C" size="64">
      <constraint>REFERENCES cm_co_ceph_provisioner_creds(identifier)</constraint>
      <notnull />
    </field>
    <field name="placement" type="C" size="64">
       <notnull />
     </field>
     <field name="type" type="C" size="2" />
    <index name="co_ceph_provisioner_data_placement_i2">
      <col>co_ceph_provisioner_target_id</col>
      <col>identifier</col>
      <unique />
    </index>
  </table>
</schema>

